spec_version: 2-preview

description: deploy azure vm

inputs:
  compute_service_name:
    type: string
    default: "eks"
    display-style: normal
  vm_name:
    type: string
    default: "my VM"
    display-style: normal

outputs:
  vm1_name:
    value: '{{.grains.vm1.outputs.vm_id}}'
    
grains:
  vm1:
    kind: terraform
    spec:
      source:
        path: github.com/QualiNext/test-spec2-public.git//terraform/azure-vm-module
      host:
        cloud-account: private-cloud
        compute-service: '{{.inputs.compute_service_name}}'
      inputs:
        - vm_name: '{{.inputs.vm_name}}'    
      outputs:
        - vm_id    
